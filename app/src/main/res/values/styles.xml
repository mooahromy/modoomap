<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sloth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!--    기존 테마 파일 내부에 Splash 테마도 같이 선언, v31 버전의 새로운 themes.xml 파일에 선언 x-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.Sloth</item>

        <!-- Status bar and Nav bar configs -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextViewCustomStyle">
        <item name="android:fontFamily">@font/notosans_kr_black</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="TextViewCustomStyle_medium">
        <item name="android:fontFamily">@font/notosans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="NoUnderlineEditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/notosans_kr_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/text_title</item>
    </style>
</resources>
